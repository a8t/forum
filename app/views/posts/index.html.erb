
<h1>Listing posts</h1>

<% if current_user %>
<div class="box">
  <%= link_to 'New post', new_post_path %>
</div>
<% else %>
  <h2>Log in to make a post. </h2>
<% end %>




<% @posts.each do |each_post| %>
  <div class="box">
    <%= render "display", post: each_post %>
    <%= link_to 'Show', post_path(each_post) %>
  </div>
<% end %>

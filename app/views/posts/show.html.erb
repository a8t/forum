<h1>Show post</h1>
<div class="box">
  <%= render "display", post: @post %>
</div>

<h2>Comments</h2>
<%= render @post.comments %>

<% if current_user %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

  <br>
<% else %>
  <h2>Log in to make a comment </h2>
<% end %>

<%= link_to 'Edit post', edit_post_path %>
<%= link_to 'Delete post', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

<%= link_to 'Return', posts_path %>

<h1>Show post</h1>
<div class="box">
  <%= render "display", post: @post %>
</div>

<h2>Comments</h2>
<%= render @post.comments %>


<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit post', edit_post_path %>
<%= link_to 'Delete post', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

<br>
<%= link_to 'Return', posts_path %>

<div class="box">
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
    <strong>Commenter:</strong>
    <%= comment.user.email %>
  </p>
  <% if current_user == comment.user %>
    <%= link_to 'Delete', [comment.post, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
  <p>

</div>
